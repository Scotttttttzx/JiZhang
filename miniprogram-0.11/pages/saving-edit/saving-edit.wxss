/* pages/saving-edit/saving-edit.wxss */
page {
  background: #fafbfc;
  min-height: 100vh;
}

.container {
  padding: 24rpx;
  padding-bottom: 120rpx;
}

.edit-form {
  background: #fff;
  border-radius: 18rpx;
  padding: 32rpx 24rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 2rpx 16rpx 0 rgba(0,0,0,0.06);
}

.form-item {
  margin-bottom: 32rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #f2f2f2;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.amount-input-wrapper {
  display: flex;
  align-items: center;
  border: 2rpx solid #f2f2f2;
  border-radius: 12rpx;
  padding: 0 24rpx;
  height: 80rpx;
}

.currency {
  font-size: 28rpx;
  color: #333;
  margin-right: 16rpx;
}

.amount-input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
  color: #333;
}

.picker-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #f2f2f2;
  border-radius: 12rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.placeholder {
  color: #999;
}

.type-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.type-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 12rpx;
  border: 2rpx solid #f2f2f2;
  border-radius: 12rpx;
  background: #fff;
  transition: all 0.3s ease;
}

.type-item.selected {
  border-color: #27c27c;
  background: #f0f9f4;
}

.type-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.type-name {
  font-size: 24rpx;
  color: #333;
}

.button-group {
  display: flex;
  gap: 24rpx;
}

.cancel-btn, .save-btn {
  flex: 1;
  height: 88rpx;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.cancel-btn {
  background: #f8f9fa;
  color: #666;
}

.save-btn {
  background: #27c27c;
  color: #fff;
} 