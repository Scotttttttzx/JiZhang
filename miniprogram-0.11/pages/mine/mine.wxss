/* pages/mine/mine.wxss */
page {
  background: #f7f8fa;
  min-height: 100vh;
}

.container {
  padding: 24rpx;
  padding-bottom: 120rpx;
}

/* 用户信息卡片 */
.user-card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.05);
  padding: 32rpx 24rpx;
  margin-bottom: 24rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-wrapper {
  padding: 0;
  width: 120rpx !important;
  height: 120rpx !important;
  border-radius: 50%;
  margin-bottom: 24rpx;
  background: none;
  border: none;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid #f2f2f2;
}

.avatar-placeholder {
  margin-bottom: 24rpx;
}

.nickname-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.nickname-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.nickname-input {
  width: 200rpx;
  height: 60rpx;
  border: 2rpx solid #f2f2f2;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
}

.nickname {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-top: 16rpx;
}

.get-user-btn {
  background: #465EFB;
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 32rpx;
  border-radius: 12rpx;
  border: none;
  margin-top: 16rpx;
}

.version-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
}

/* 统计数据卡片 */
.stats-card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.05);
  padding: 32rpx 24rpx;
  margin-bottom: 24rpx;
}

.stats-header {
  margin-bottom: 24rpx;
}

.stats-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  min-height: 120rpx;
  justify-content: center;
}

.stats-value {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 8rpx;
  text-align: center;
  word-break: break-all;
  line-height: 1.2;
}

.stats-value.out {
  color: #ff5a5f;
}

.stats-value.in {
  color: #27c27c;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  line-height: 1.2;
}

/* 功能菜单 */
.menu-section {
  margin-bottom: 24rpx;
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}

.menu-grid {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.05);
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f2f2f2;
  min-height: 88rpx;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.menu-info {
  display: flex;
  flex-direction: column;
  flex: 1;
  min-width: 0;
}

.menu-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 4rpx;
  line-height: 1.2;
}

.menu-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.2;
  word-break: break-all;
}

.menu-arrow {
  font-size: 28rpx;
  color: #ccc;
  margin-left: 16rpx;
  flex-shrink: 0;
}

/* 数据管理 */
.data-section {
  margin-bottom: 24rpx;
}

.data-actions {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.05);
  overflow: hidden;
}

.action-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  min-height: 88rpx;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.action-icon.danger {
  background-color: #ff5a5f;
}

.action-info {
  display: flex;
  flex-direction: column;
  flex: 1;
  min-width: 0;
}

.action-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 4rpx;
  line-height: 1.2;
}

.action-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.2;
  word-break: break-all;
}

.action-arrow {
  font-size: 28rpx;
  color: #ccc;
  margin-left: 16rpx;
  flex-shrink: 0;
}

/* 版本信息 */
.version-info {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

.version-text {
  font-size: 24rpx;
  color: #999;
}

/* 新增样式 */
.user-input {
  margin-bottom: 24rpx;
}

.user-input-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.user-input-input {
  width: 200rpx;
  height: 60rpx;
  border: 2rpx solid #f2f2f2;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
}

.user-input-button {
  background: #465EFB;
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 32rpx;
  border-radius: 12rpx;
  border: none;
  margin-top: 16rpx;
}

.user-input-result {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #333;
}

.user-input-result.success {
  color: #27c27c;
}

.user-input-result.error {
  color: #ff5a5f;
} 