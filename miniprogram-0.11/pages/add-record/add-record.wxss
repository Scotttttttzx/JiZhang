/* add-record.wxss */
.container {
  min-height: 100vh;
  background: #f8f9fa;
  padding: 0 0 40rpx 0;
}

/* 类型选择器 */
.type-selector {
  display: flex;
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}

.type-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 0;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.type-btn.active {
  background: #357aff;
  color: #fff;
}

.type-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.type-text {
  font-size: 28rpx;
  font-weight: 500;
}

/* 金额输入 */
.amount-section {
  background: #fff;
  margin: 20rpx;
  padding: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.amount-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}

.amount-input-wrapper {
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #e9ecef;
  padding-bottom: 16rpx;
}

.currency {
  font-size: 48rpx;
  color: #333;
  font-weight: 600;
  margin-right: 16rpx;
}

.amount-input {
  flex: 1;
  font-size: 48rpx;
  color: #333;
  font-weight: 600;
}

/* 分类选择 */
.category-section {
  background: #fff;
  margin: 20rpx;
  padding: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.section-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 24rpx;
  display: block;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 12rpx;
  border-radius: 12rpx;
  border: 2rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.category-item.selected {
  background: #357aff;
  border-color: #357aff;
  color: #fff;
}

.category-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.category-name {
  font-size: 24rpx;
  text-align: center;
}

/* 备注输入 */
.remark-section {
  background: #fff;
  margin: 20rpx;
  padding: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.remark-input {
  width: 100%;
  font-size: 28rpx;
  color: #333;
  padding: 16rpx 0;
  border-bottom: 2rpx solid #e9ecef;
}

/* 日期时间选择 */
.datetime-section {
  background: #fff;
  margin: 20rpx;
  padding: 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.datetime-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f8f9fa;
}

.datetime-item:last-child {
  border-bottom: none;
}

.datetime-label {
  font-size: 28rpx;
  color: #666;
}

.datetime-picker {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.picker-arrow {
  margin-left: 16rpx;
  color: #999;
  font-size: 24rpx;
}

/* 保存按钮 */
.save-section {
  margin: 40rpx 20rpx 20rpx 20rpx;
}

.save-btn {
  width: 100%;
  background: #357aff;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  padding: 24rpx 0;
  border-radius: 16rpx;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(53, 122, 255, 0.3);
}

.save-btn:active {
  background: #2d6bff;
  transform: translateY(2rpx);
} 