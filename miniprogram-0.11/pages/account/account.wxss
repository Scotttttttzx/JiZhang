/* account.wxss */
page {
  background-color: #f7f8fa;
}

.container {
  padding: 24rpx;
  padding-bottom: 180rpx;
}

/* 总资产卡片 */
.total-assets-card {
  background: linear-gradient(135deg, #465EFB, #6D82FF);
  color: #fff;
  padding: 40rpx;
  border-radius: 24rpx;
  margin-bottom: 40rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(70, 94, 251, 0.3);
}

.card-header .card-title {
  font-size: 28rpx;
  opacity: 0.8;
}

.assets-value {
  margin-top: 16rpx;
  display: flex;
  align-items: baseline;
}

.assets-value .currency {
  font-size: 40rpx;
  margin-right: 8rpx;
}

.assets-value .amount {
  font-size: 64rpx;
  font-weight: bold;
  letter-spacing: 1rpx;
}

.assets-bg {
  position: absolute;
  bottom: -40rpx;
  right: -30rpx;
  width: 200rpx;
  height: 200rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  opacity: 0.5;
}

/* 账户列表 */
.account-list-section .section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-header .section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.account-list .account-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding: 32rpx;
  border-radius: 18rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s ease-in-out;
}
.account-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.08);
}

.card-left {
  display: flex;
  align-items: center;
}

.account-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  margin-right: 24rpx;
  color: #fff;
}

.account-info {
  display: flex;
  flex-direction: column;
}

.account-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.account-type {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.card-right {
  display: flex;
  align-items: center;
}

.account-balance {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.arrow {
  font-size: 36rpx;
  color: #ccc;
  margin-left: 16rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
  color: #999;
}
.empty-icon {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.5;
  margin-bottom: 24rpx;
}
.empty-text {
  font-size: 28rpx;
}

/* 新建按钮 */
.add-btn-wrapper {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 100%;
  display: flex;
  justify-content: center;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.add-btn {
  background: #465EFB;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 50rpx;
  height: 96rpx;
  line-height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(70, 94, 251, 0.35);
  width: 100%;
}
.plus-icon {
  font-size: 48rpx;
  margin-right: 12rpx;
}

/* 新建表单弹窗 */
.add-form-popup .popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 99;
}

.add-form-popup .popup-content {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
  z-index: 100;
  padding: 40rpx;
  box-sizing: border-box;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}
.popup-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.close-btn {
  font-size: 48rpx;
  color: #ccc;
}

.form-body .form-item {
  margin-bottom: 32rpx;
}
.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}
.form-input {
  background-color: #f7f8fa;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 30rpx;
  width: auto;
}
.form-picker {
  background-color: #f7f8fa;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 30rpx;
}
.picker-display {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.picker-arrow {
  color: #ccc;
  font-size: 36rpx;
}

.form-footer .submit-btn {
  background: #465EFB;
  color: #fff;
  border-radius: 18rpx;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  font-weight: bold;
} 