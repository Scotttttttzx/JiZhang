/* pages/account-edit/account-edit.wxss */
page {
  background-color: #f7f8fa;
}

.container {
  padding: 24rpx;
}

.edit-card {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  margin-bottom: 32rpx;
}

.card-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
}

.form-textarea {
  width: 100%;
  height: 120rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 30rpx;
  color: #333;
  box-sizing: border-box;
}

/* 账户类型选择器 */
.type-selector {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.type-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  border: 2rpx solid #e5e5e5;
  border-radius: 12rpx;
  background-color: #fff;
  transition: all 0.3s ease;
}

.type-item.active {
  border-color: #465EFB;
  background-color: #f0f3ff;
}

.type-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.type-name {
  font-size: 24rpx;
  color: #666;
}

.type-item.active .type-name {
  color: #465EFB;
  font-weight: 500;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.save-btn {
  background-color: #465EFB;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 50rpx;
  height: 96rpx;
  line-height: 96rpx;
  border: none;
}

.delete-btn {
  background-color: #fff;
  color: #ff4757;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 50rpx;
  height: 96rpx;
  line-height: 96rpx;
  border: 2rpx solid #ff4757;
}

/* 底部占位 */
.footer-placeholder {
  height: 120rpx;
} 